<div class="jumbotron" >
  <h1 class="display-4"><%= @friend.username %></h1>
  <p class="lead"><%= @friend.email %></p>
  <hr class="my-4">
  <p><%= @friend.bio %></p>
  <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
</div>



<div>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-dark" %> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-dark"%>
  <%= button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-danger" %>
</div>
